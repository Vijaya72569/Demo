  @model MvcCoreCurd.Models.EmployeeViewModel

<form asp-controller="Employee" asp-action="Index" method="post">
    <table>
        <tr>
            <td><label asp-for="SelectedEmployee.Eid"></label></td>
@*             <td><input asp-for="SelectedEmployee.Eid" readonly /></td> *@
               <td> <input asp-for="SelectedEmployee.Eid"
                  
                   readonly="@(Model.SelectedEmployee.Eid > 0)"
                       placeholder="New ID Auto Generated" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="SelectedEmployee.Ename"></label></td>
            <td><input asp-for="SelectedEmployee.Ename" /></td>
        </tr>
        <tr>
            <td><label asp-for="SelectedEmployee.Salary"></label></td>
            <td><input asp-for="SelectedEmployee.Salary" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Save" name="str" class="btn btn-success btn-sm" /></td>
            <td><input type="submit" value="Update" name="str" class="btn btn-primary btn-sm" /></td>
        </tr>
    </table>
</form>

<table border="1">
    <tr>
        <th>Eid</th>
        <th>Ename</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model.EmployeeList)
    {
        <tr>
            <td>@item.Eid</td>
            <td>@item.Ename</td>
            <td>@item.Salary</td>
            <td>@Html.ActionLink("Edit", "Index", new { id = item.Eid })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.Eid }, new { onclick = "return confirm('Are you sure?');" })</td>
        </tr>
    }
</table>
